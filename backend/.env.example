# TechGadgets Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/techgadgets
# For MongoDB Atlas, use: mongodb+srv://username:password@cluster.mongodb.net/techgadgets

# Authentication Secrets
JWT_SECRET=your_super_secret_jwt_key_here_minimum_32_characters_for_security
SESSION_SECRET=your_session_secret_here_also_should_be_long_and_random

# Server Configuration
PORT=5002
NODE_ENV=development

# CORS Configuration
CLIENT_URL=http://localhost:3000

# File Upload Configuration (Optional)
UPLOAD_PATH=./public/uploads
MAX_FILE_SIZE=5242880

# Email Configuration (Optional - for order confirmations)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# Payment Gateway Configuration (Optional - for future payment integration)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Analytics and Monitoring (Optional)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
# SENTRY_DSN=your_sentry_dsn_for_error_tracking

# Rate Limiting (Optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (Optional - for session storage and caching)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password
