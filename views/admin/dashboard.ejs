<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Tech Gadgets & Accessories</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/cart">Cart</a>
      <% if (!user) { %>
        <a href="/login">Login</a>
        <a href="/register">Register</a>
      <% } else { %>
        <a href="/logout">Logout</a>
        <% if (user.isAdmin) { %>
          <a href="/admin">Admin</a>
        <% } %>
      <% } %>
    </nav>
  </header>
  <main>
    <% if (success_msg && String(success_msg).trim()) { %>
      <div class="flash-message success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg && String(error_msg).trim()) { %>
      <div class="flash-message"><%= error_msg %></div>
    <% } %>
    <% if (error && String(error).trim()) { %>
      <div class="flash-message"><%= error %></div>
    <% } %>
    
    <h2>Admin Dashboard</h2>
    
    <div class="admin-stats">
      <div class="stat-card">
        <h3>Total Products</h3>
        <p class="stat-number"><%= totalProducts %></p>
        <a href="/admin/products" class="btn">Manage Products</a>
      </div>
      <div class="stat-card">
        <h3>Total Users</h3>
        <p class="stat-number"><%= totalUsers %></p>
        <a href="/admin/users" class="btn">Manage Users</a>
      </div>
    </div>
    
    <div class="admin-sections">
      <div class="admin-section">
        <h3>Recent Products</h3>
        <% if (products.length === 0) { %>
          <p>No products found.</p>
        <% } else { %>
          <div class="admin-list">
            <% products.forEach(product => { %>
              <div class="admin-item">
                <div class="admin-item-info">
                  <h4><%= product.name %></h4>
                  <p>$<%= product.price.toFixed(2) %> - <%= product.category %></p>
                </div>
                <div class="admin-item-actions">
                  <a href="/products/<%= product._id %>" class="btn">View</a>
                  <a href="/products/<%= product._id %>/edit" class="btn">Edit</a>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
      
      <div class="admin-section">
        <h3>Recent Users</h3>
        <% if (users.length === 0) { %>
          <p>No users found.</p>
        <% } else { %>
          <div class="admin-list">
            <% users.forEach(user => { %>
              <div class="admin-item">
                <div class="admin-item-info">
                  <h4><%= user.username %></h4>
                  <p><%= user.email %> - <%= user.isAdmin ? 'Admin' : 'User' %></p>
                </div>
                <div class="admin-item-actions">
                  <form action="/admin/users/<%= user._id %>/toggle-admin" method="POST" style="display: inline;">
                    <button type="submit" class="btn">
                      <%= user.isAdmin ? 'Remove Admin' : 'Make Admin' %>
                    </button>
                  </form>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
    
    <div class="admin-actions">
      <a href="/products/new" class="btn">Add New Product</a>
      <a href="/admin/products" class="btn">View All Products</a>
      <a href="/admin/users" class="btn">View All Users</a>
    </div>
  </main>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Tech Gadgets. All rights reserved.</p>
  </footer>
</body>
</html> 