<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Tech Gadgets & Accessories</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/cart">Cart</a>
      <% if (!user) { %>
        <a href="/login">Login</a>
        <a href="/register">Register</a>
      <% } else { %>
        <a href="/logout">Logout</a>
        <% if (user.isAdmin) { %>
          <a href="/admin">Admin</a>
        <% } %>
      <% } %>
    </nav>
  </header>
  <main>
    <% if (success_msg && String(success_msg).trim()) { %>
      <div class="flash-message success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg && String(error_msg).trim()) { %>
      <div class="flash-message"><%= error_msg %></div>
    <% } %>
    <% if (error && String(error).trim()) { %>
      <div class="flash-message"><%= error %></div>
    <% } %>
    
    <h2>User Management</h2>
    
    <div class="admin-actions" style="margin-bottom: 2rem;">
      <a href="/admin" class="btn">Back to Dashboard</a>
    </div>
    
    <% if (users.length === 0) { %>
      <div class="cart-empty">
        <p>No users found.</p>
      </div>
    <% } else { %>
      <div class="admin-list">
        <% users.forEach(user => { %>
          <div class="admin-item">
            <div class="admin-item-info">
              <h4><%= user.username %></h4>
              <p><%= user.email %></p>
              <p><strong>Role:</strong> <%= user.isAdmin ? 'Admin' : 'User' %></p>
              <p><strong>Joined:</strong> <%= new Date(user.createdAt).toLocaleDateString() %></p>
            </div>
            <div class="admin-item-actions">
              <form action="/admin/users/<%= user._id %>/toggle-admin" method="POST" style="display: inline;">
                <button type="submit" class="btn">
                  <%= user.isAdmin ? 'Remove Admin' : 'Make Admin' %>
                </button>
              </form>
              <% if (user._id.toString() !== user._id.toString()) { %>
                <form action="/admin/users/<%= user._id %>/delete" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">
                    Delete User
                  </button>
                </form>
              <% } %>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Tech Gadgets. All rights reserved.</p>
  </footer>
</body>
</html> 