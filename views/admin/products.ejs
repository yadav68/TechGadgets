<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Tech Gadgets & Accessories</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/cart">Cart</a>
      <% if (!user) { %>
        <a href="/login">Login</a>
        <a href="/register">Register</a>
      <% } else { %>
        <a href="/logout">Logout</a>
        <% if (user.isAdmin) { %>
          <a href="/admin">Admin</a>
        <% } %>
      <% } %>
    </nav>
  </header>
  <main>
    <% if (success_msg && String(success_msg).trim()) { %>
      <div class="flash-message success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg && String(error_msg).trim()) { %>
      <div class="flash-message"><%= error_msg %></div>
    <% } %>
    <% if (error && String(error).trim()) { %>
      <div class="flash-message"><%= error %></div>
    <% } %>
    
    <h2>Product Management</h2>
    
    <div class="admin-actions" style="margin-bottom: 2rem;">
      <a href="/admin" class="btn">Back to Dashboard</a>
      <a href="/products/new" class="btn">Add New Product</a>
    </div>
    
    <% if (products.length === 0) { %>
      <div class="cart-empty">
        <p>No products found.</p>
        <a href="/products/new" class="btn">Add Your First Product</a>
      </div>
    <% } else { %>
      <div class="products-list">
        <% products.forEach(product => { %>
          <div class="product-card">
            <a href="/products/<%= product._id %>">
              <% if (product.image) { %>
                <img src="<%= product.image %>" alt="<%= product.name %>" class="product-img" />
              <% } %>
              <h3><%= product.name %></h3>
            </a>
            <p>$<%= product.price.toFixed(2) %></p>
            <p><strong>Category:</strong> <%= product.category %></p>
            <p><strong>Stock:</strong> <%= product.stock %></p>
            <div class="admin-item-actions">
              <a href="/products/<%= product._id %>" class="btn">View</a>
              <a href="/products/<%= product._id %>/edit" class="btn">Edit</a>
              <form action="/products/<%= product._id %>/delete" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Tech Gadgets. All rights reserved.</p>
  </footer>
</body>
</html> 