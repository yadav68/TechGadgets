<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
    <h1>Tech Gadgets & Accessories</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/cart">Cart</a>
      <% if (!user) { %>
        <a href="/login">Login</a>
        <a href="/register">Register</a>
      <% } else { %>
        <a href="/logout">Logout</a>
        <% if (user.isAdmin) { %>
          <a href="/admin">Admin</a>
        <% } %>
      <% } %>
    </nav>
  </header>
  <main>
    <% if (success_msg && String(success_msg).trim()) { %>
      <div class="flash-message success"><%= success_msg %></div>
    <% } %>
    <% if (error_msg && String(error_msg).trim()) { %>
      <div class="flash-message"><%= error_msg %></div>
    <% } %>
    <% if (error && String(error).trim()) { %>
      <div class="flash-message"><%= error %></div>
    <% } %>
    <h2>Register</h2>
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <ul class="error-list">
        <% errors.forEach(function(error) { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    <% } %>
    <form action="/register" method="POST" class="auth-form">
      <input type="text" name="username" placeholder="Username" value="<%= typeof username !== 'undefined' ? username : '' %>" required />
      <input type="email" name="email" placeholder="Email" value="<%= typeof email !== 'undefined' ? email : '' %>" required />
      <input type="password" name="password" placeholder="Password" required />
      <input type="password" name="password2" placeholder="Confirm Password" required />
      <button type="submit" class="btn">Register</button>
    </form>
    <p>Already have an account? <a href="/login">Login</a></p>
  </main>
  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Tech Gadgets. All rights reserved.</p>
  </footer>
</body>
</html> 